    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xunjie.demo.textdemo.MainActivity">

    <EditText
        android:id="@+id/et_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="100" />

    <TextView
        android:id="@+id/et_2"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="100" />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="点击"/>
</LinearLayout>
